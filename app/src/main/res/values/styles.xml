<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/btnOrange</item>
        <item name="colorPrimaryDark">@color/btnOrange</item>
        <item name="colorAccent">@color/lightgrey</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>


    </style>

    <style name="dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- popup enter -->
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        <!-- popup exit -->
    </style>

    <style name="BeatBoxButtonTheme" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@color/whitesmoke</item>
    </style>
    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/window_show</item>
        <item name="android:windowExitAnimation">@anim/window_hide</item>
    </style>



</resources>
